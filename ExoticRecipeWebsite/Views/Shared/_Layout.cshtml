<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="exotic recipes" />
    <meta name="keywords" content="recipe, exotic, parody, comedy" />
    
    <link href="~/Content/normalize.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/site.css" rel="stylesheet" type="text/css" />
    <link href="~/fonts/Font Awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=PT+Serif" rel="stylesheet">
    <link rel="icon" type="image/svg" href="~/images/bowl_of_steaming_soup_clip_art_13404.gif" />

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="http://code.jquery.com/jquery-1.11.0.min.js" type="text/javascript" charset="utf-8"></script>

    <title>@ViewBag.Title - Exotic Recipes</title>

</head>

<body>
    <div id="body-wrapper">
        <header>
            <div id="header-image-left"></div>
            <div id="title-menu-wrapper">
                <h1 id="header-title">Exotic Recipies</h1>
                <ul id="header-menu">
                    <li><a id="index" class="nav-list-items" href="@Url.Action("Index")">Home</a></li>
                    <li><a id="search" class="nav-list-items" href="@Url.Action("Search")">Search</a></li>
                    <li><a id="contact" class="nav-list-items" href="@Url.Action("Contact")">Contact</a></li>
                </ul>
            </div>
            <div id="header-image-right"></div>
        </header>

        <div id="container-body-content">
            @RenderBody()
        </div>

    </div>
    <footer>
        <div id="footer-name-and-email-wrapper">
            <p id="footer-name">&copy; @DateTime.Now.Year - Bill Sanders</p>
            <a href="mailto:exotic.recipe.website@gmail.com" id="footer-email">exotic.recipe.website@gmail.com</a>
        </div>
        <a id="footer-github" href="https://github.com/wcsanders1" target="_blank"><img src="~/images/GitHub-Mark-Light-64px.png" /></a>
    </footer>

    <script src="~/Scripts/site.js" type="text/javascript"></script>
</body>
</html>